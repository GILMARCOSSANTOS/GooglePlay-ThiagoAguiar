<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabTextAppearance="@style/CustomTabTextAppearance"
        app:tabIndicatorHeight="4dp"
        app:tabMode="scrollable"
        app:tabIndicator="@drawable/tab_item_selector"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/teal_200" />

    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/frag_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--
    ▬▬▬ DOCUMENTAÇÃO = 010:
    ▬ Navegação entre Activitys:
    • Activity Anterior: MainFragment
    • Activity Atual: fragment_main.xml
    • Activity Próxima: MainFragment
    ▬ Descrição:
    -->

    <!--    O TabLayout Permite a criação de Várias Guias na 'actvity.xml': -->
    <!--    app:tabIndicator="@drawable/tab_item_selector"-->


</LinearLayout>